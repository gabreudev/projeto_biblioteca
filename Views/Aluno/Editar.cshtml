@model mvc.Models.Aluno
@{
    ViewData["Title"] = "BiblioEEEP";
}

<h1>Editar dados do aluno</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Turma" class="control-label"></label>
                <input asp-for="Turma" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Livro" class="control-label"></label>
                <input asp-for="Livro" class="form-control"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>
